#!/bin/bash

rcpt='secrets@potz.me'
case "${1}" in
        e) shift; tar c $* | gpg -er ${rcpt} -o $(cat /dev/urandom | head -c 20 | unibinary -e).tgp;;
        d) shift; gpg -dq ${1} | tar t && gpg -dq ${1} |tar x;;
        t) shift; gpg -dq ${1} | tar t;;
        *) echo "Usage: tpg [e|d|t] [glob|file]";;
esac
