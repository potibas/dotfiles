{
  // Appearance
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Predawn Twilight",
  "workbench.editor.showTabs": true,
  "workbench.editor.labelFormat": "long",
  // "editor.fontFamily": "Inconsolata-dz for Powerline",
  "editor.fontFamily": "Operator Mono Lig",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,

  // Sidebar & File Explorer
  "workbench.sideBar.location": "left",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,
  "explorer.openEditors.visible": 0,

  // Behaviour
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "editor.mouseWheelZoom": true,
  "window.zoomLevel": -1,

  // Terminal
  // "terminal.integrated.shell.osx": "/bin/zsh",

  // Editing
  "editor.tabSize": 2,
  "editor.autoIndent": "advanced",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.dragAndDrop": false,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,

  // File ignores
  "files.exclude": {
    // Version Control
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    // NodeJS
    "**/node_modules/": true,
    // Elixir
    "**/dist/": true,
    "**/_build/": true,
    // "**/deps/": true,
    "**/.elixir_ls/": true,
    // Python
    "**/__pycache__/": true,
    "**/*.picklecache": true,
  },

  // JSON
  "[jsonc]": {
    "editor.formatOnSave": false
  },

  // Elixir-specific
  "[elixir]": {
    // Disable spec suggestions all over the place
    "editor.codeLens": false,
    "editor.rulers": [98],
  },
  "elixirLS.fetchDeps": false,

  // Elixir color customizations
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": "keyword.other.special-method.elixir", "settings": { "fontStyle": "italic" } },
      { "scope": "constant.other.symbol.elixir","settings": { "foreground": "#61afef" } }
    ]
  },
  "editor.accessibilitySupport": "off",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "files.associations": {
    "*.livemd": "markdown"
  },
}
