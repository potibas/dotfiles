{
  // Appearance
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "Liga Comic Shanns Regular",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,

  // Inline diff
  "diffEditor.renderSideBySide": false,

  // Sidebar & File Explorer
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,
  "explorer.openEditors.visible": 0,

  // Behaviour
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "none",
  "workbench.settings.editor": "json",
  "editor.mouseWheelZoom": true,
  "editor.snippetSuggestions": "inline",

  // Source Control
  "git.openDiffOnClick": false,

  // Terminal
  "terminal.integrated.fontSize": 10,
  "terminal.integrated.fontFamily": "Inconsolata-dz for Powerline",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.gpuAcceleration": "on",

  // Editing
  "editor.tabSize": 2,
  "editor.autoIndent": "advanced",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.dragAndDrop": false,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,

  // File ignores
  "files.exclude": {
    // Node
    "**/node_modules/": true,
    // Elixir
    "**/dist/": true,
    "**/_build/": true,
    "**/deps/": true,
    "**/.elixir_ls/": true,
    // Python
    "**/__pycache__/": true,
    "**/*.picklecache": true
  },

  // Format JSON with prettier
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // But, don't autoformat this settings file.
  "[jsonc]": {
    "editor.formatOnSave": false
  },

  // Emmet
  "emmet.includeLanguages": {
    "phoenix-heex": "html"
  },

  // Javascript
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Elixir-specific
  "[elixir]": {
    "editor.rulers": [98],
  },
  "elixirLS.fetchDeps": false,
  "elixirLS.suggestSpecs": false,
  "elixirLS.enableTestLenses": true,
  "elixirLS.signatureAfterComplete": true,

  // Convenient last-liners
  "window.zoomLevel": 1,
  "workbench.colorTheme": "Predawn Twilight"
}
