[user]
  name = Potiguar Faga Catalan
  email = potiguar@potiguar.net

[color]
  ui = auto

[core]
  excludesFile = ~/.config/git/ignore

[init]
  defaultBranch = main

[url "git@github.com:potibas/"]
  insteadOf = "potibas:"

[url "git@github.com:"]
  insteadOf = "github:"

[alias]
  aa = add --all
  amend = commit --amend
  b = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  cpn = cherry-pick --no-commit
  dc = diff --cached
  di = diff
  fa = fetch --all
  pr = pull --rebase
  rc = rebase --continue
  ri = rebase --interactive --autosquash --committer-date-is-author-date
  sa = !git add . && git stash
  sp = stash pop
  squash = commit --amend --no-edit
  st = status
  undo = reset HEAD^

# Colored logs
  l  = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(yellow)%h%C(reset) %C(green)(%ar)%C(reset) %C(red)%d%C(reset) %C(white)%s%C(reset) - %C(ul italic cyan)%an%C(reset)'
  la = !git l --all
  r = !git l -10
  ra = !git r --all
