{
    // The basics
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    // Use the JSON settings editor by default
    "workbench.settings.editor": "json",

    // Appearance
    "apc.font.family": "RobotoMono Nerd Font Mono",
    "apc.statusBar": { "fontSize": 13, "height": 30, "position": "editor-bottom" },
    "apc.activityBar": {
        "position": "bottom",
        "size": 5
    },
    "apc.buttons": [
        // Add commands to the statusbar
        { "command": "Run Pest tests", "priority": 1, "tooltip": "Run test", "vscommand": "better-pest.run" }
    ],
    "apc.electron": {
        "titleBarStyle": "hiddenInset",
        "vibrancy": "ultra-dark"
    },
    "window.titleBarStyle": "native",
    "workbench.colorTheme": "Night Owl",
    "workbench.iconTheme": "catppuccin-perfect-mocha",
    "editor.cursorStyle": "line",
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "RobotoMono Nerd Font Mono",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.1,
    "editor.fontSize": 15,
    "editor.lineHeight": 30,
    "terminal.integrated.tabs.enabled": false,
    "editor.rulers": [ 120 ],
    "window.zoomLevel": 0,
    "window.density.editorTabHeight": "compact",
    "window.dialogStyle": "custom",
    "editor.guides.indentation": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.showFoldingControls": "never",
    "git.enableStatusBarSync": false,
    "workbench.activityBar.location": "bottom",
    "workbench.editor.showTabs": "multiple",

    // Theme customizations
    "workbench.colorCustomizations": {
        "[Night Owl]": {
            "editorGroup.border": "#5f7e97",
            "sideBar.border": "#5f7e97"
        }
    },

    // Editor behaviour
    "editor.mouseWheelZoom": true,
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "extensions.ignoreRecommendations": true,
    "explorer.autoReveal": true,
    "explorer.autoRevealExclude": {
        "**/vendor": true,
    },

    // Terminal settings
    "terminal.integrated.showExitAlert": false,

    // Auto-complete
    "editor.suggest.preview": true,
    "editor.suggest.showWords": false,
    "editor.suggest.snippetsPreventQuickSuggestions": true,

    // File Explorer Settings
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": true,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",

    // Startup Behaviour
    "window.restoreWindows": "none",
    "window.restoreFullscreen": true,
    "workbench.startupEditor": "none",

    // === Git Integration ===
    "gitlens.blame.highlight.locations": [ "gutter", "line" ],
    "gitlens.mode.statusBar.enabled": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.cloudPatches.enabled": false,
    "gitlens.views.workspaces.showWorktrees": false,
    "gitlens.showWelcomeOnInstall": false,
    "gitlens.statusBar.pullRequests.enabled": false,
    "lazygit-vscode.configPath": "/Users/potz/.config/vscode/lazygit.yml",

    // === PHP Integration ===
    "laravel-pint.enable": true,
    "php.suggest.basic": false,
    "php.validate.enable": false,
    "[php]": {
        "editor.defaultFormatter": "open-southeners.laravel-pint",
    },

    // === Javascript/React integration ===
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // === Error Lens ===
    "errorLens.fontFamily": "MonaspiceRn Nerd Font Mono",
    "errorLens.fontSize": "13px",
    "errorLens.alignMessage": { "end": 121, "minimumMargin": 10 },
    "errorLens.messageBackgroundMode": "message",
    "errorLens.borderRadius": "5em",
    "errorLens.statusBarMessageEnabled": true,
    "errorLens.statusBarMessageType": "closestProblem",
    "errorLens.statusBarCommand": "goToLine",
    "errorLens.statusBarColorsEnabled": true,
    "errorLens.statusBarIconsEnabled": true,
    "errorLens.statusBarIconsTargetProblems": "activeEditor",
    "errorLens.statusBarMessageAlignment": "right",

    // Neovim?
    "vscode-neovim.neovimClean": true,
    "vscode-neovim.logOutputToConsole": true,
    "vscode-neovim.NVIM_APPNAME": "vscode",
    "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },

    // Keep settings files tidy
    "json.format.keepLines": true,
    "json.schemas": [
        { "fileMatch": [ "settings.json", "keybindings.json" ], "schema": { "allowTrailingCommas": true } }
    ],
    "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "git.openRepositoryInParentFolders": "always",
    "supermaven.enable": {
        "*": true
    },

}
