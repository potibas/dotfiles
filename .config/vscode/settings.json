{
    // The basics
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    // Use the JSON settings editor by default
    "workbench.settings.editor": "json",

    // Appearance
    "workbench.colorTheme": "Catppuccin Mocha",
    "workbench.iconTheme": "catppuccin-perfect-mocha",
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "Iosevka Nerd Font Mono",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.1,
    "editor.fontSize": 15,
    "editor.lineHeight": 30,
    "editor.rulers": [ 120 ],
    "window.zoomLevel": 0,

    // Hide everything I can from the UI
    "breadcrumbs.enabled": false,
    "editor.guides.indentation": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.showFoldingControls": "never",
    "git.enableStatusBarSync": false,
    "problems.visibility": false,
    "workbench.activityBar.location": "hidden",
    "workbench.editor.showTabs": "none",

    // Editor behaviour
    "editor.mouseWheelZoom": true,
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "extensions.ignoreRecommendations": true,

    // Auto-complete
    "editor.suggest.showWords": false,
    "editor.suggest.snippetsPreventQuickSuggestions": true,

    // File Explorer Settings
    "explorer.compactFolders": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": true,
    "workbench.tree.indent": 16,
    "workbench.tree.renderIndentGuides": "always",

    // Startup Behaviour
    "window.restoreWindows": "none",
    "window.restoreFullscreen": true,
    "workbench.startupEditor": "none",

    // === Git Integration ===
    "lazygit-vscode.configPath": "/Users/potz/.config/vscode/lazygit.yml",
    "scm.diffDecorations": "gutter",
    "scm.diffDecorationsGutterWidth": 5,

    // Keep settings files tidy
    "json.format.keepLines": true,
    "json.schemas": [
        { "fileMatch": [ "settings.json", "keybindings.json" ], "schema": { "allowTrailingCommas": true } }
    ],

}
